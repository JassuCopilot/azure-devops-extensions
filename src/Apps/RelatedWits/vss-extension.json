{
    "manifestVersion": 1,
    "id": "related-workitems",
    "version": "3.1.1",
    "name": "Related Work items",
    "description": "Gets a list of related work items for your current work item.",
    "icons": {
        "default": "images/logo.png"
    },
    "scopes": ["vso.work"],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services.Cloud"
        }
    ],
    "tags": ["Work Item", "Related", "Form", "Page"],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/mohitbagra/azure-devops-extensions"
    },
    "branding": {
        "color": "#106ebe",
        "theme": "dark"
    },
    "categories": ["Azure Boards"],
    "contributions": [
        {
            "id": "related-workitems-form-page",
            "type": "ms.vss-work-web.work-item-form-page",
            "description": "Related work items page",
            "targets": ["ms.vss-work-web.work-item-form"],
            "properties": {
                "name": "Related Work items",
                "uri": "html/index.html"
            }
        }
    ]
}
